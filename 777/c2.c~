#include<stdio.h>

int main()
{
  printf("\033[31m\033[1m"); // 开始以红色打印
  printf("          *\n");
  printf("          **\n");
  printf("          ***\n");
  printf("*         ****\n");
  printf("**        *****\n");
  printf("***       ******\n");
  printf("****      *******\n");
  printf("*****     ********\n");
  printf("**************************\n");
  printf("*****     ********\n");
  printf("****      *******\n");
  printf("***       ******\n");
  printf("**        *****\n");
  printf("*         ****\n");
  printf("          ***\n");
  printf("          **\n");
  printf("          *\n");
  printf(stdout, "\033[0m"); //去除颜色
	 return 0;
}
